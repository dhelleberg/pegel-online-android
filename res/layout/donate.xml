<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_d_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/donate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/donate_text"
        android:textColor="#FFF" />

    <Spinner
        android:id="@+id/donate_option_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/donate_text"
        android:layout_below="@+id/donate_text" />

    <Button
        android:id="@+id/donate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/donate_option_spinner"
        android:layout_below="@+id/donate_option_spinner"
        android:layout_marginTop="23dp"
        android:enabled="false"
        android:text="@string/donate_button_text" />

</RelativeLayout>