<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.cirrus.mobi.pegel" android:versionCode="3"
	android:versionName="0.8">
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:name="PegelApplication" android:debuggable="false">
		<activity android:name=".SelectRiver" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".SelectMeasurePoint"></activity>
		<activity android:name=".PegelDataView"></activity>

		<receiver android:name=".widget.PegelWidgetProvider">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/pegelwidgetinfo" />
		</receiver>
		<service android:name=".widget.PegelWidgetProvider$UpdateService" />
	</application>


	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-sdk android:maxSdkVersion="9" android:minSdkVersion="4"
		android:targetSdkVersion="4"></uses-sdk>
</manifest> 
